<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white"
                android:drawableLeft="@mipmap/icon_register_phone"
                android:drawablePadding="@dimen/text_size_5"
                android:hint="请输入您的手机号"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textColor="@color/text_gray333"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/text_size_15" />
        </ScrollView>

        <TextView
            android:id="@+id/tv_regist_send_code"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_login_tv_bg"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="#E60012"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>
</LinearLayout>