<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/text_grayf7"
              android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_pwd"
            android:drawablePadding="5dp"
            android:hint="请设置登录密码"
            android:paddingLeft="15dp"
            android:textSize="@dimen/text_size_15"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="40dp"
            android:background="#DDDDDD"/>

        <EditText
            android:id="@+id/et_pwd_confirm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_pwd_confirm"
            android:drawablePadding="5dp"
            android:hint="再次输入您的密码"
            android:paddingLeft="15dp"
            android:textSize="@dimen/text_size_15"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_regist"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_login_tv_bg"
            android:gravity="center"
            android:text="注册"
            android:textColor="#E60012"
            android:textSize="@dimen/text_size_18"/>

    </RelativeLayout>

</LinearLayout>