<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_grayf7">

        <LinearLayout
            android:id="@+id/ll_code_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="97dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我们已发送"
                android:textColor="@color/text_gray666"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="#E60012"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到您的手机："
                android:textColor="@color/text_gray666"
                android:textSize="@dimen/text_size_15"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_code_toast"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="188****6698"
            android:textSize="@dimen/text_size_30"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_regist_code"
                android:drawablePadding="@dimen/text_size_5"
                android:hint="输入验证码"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textColor="@color/text_gray333"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/tv_regist_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="43dp"
                android:text="50s"
                android:textColor="@color/text_gray666"
                android:textSize="@dimen/text_size_15"/>

            <LinearLayout
                android:id="@+id/ll_code_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_gray666"/>

                <TextView
                    android:id="@+id/tv_regist_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="获取验证码"
                    android:textColor="@color/text_gray666"
                    android:textSize="@dimen/text_size_15"/>
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_regist_next_step"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_login_tv_bg"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#E60012"
            android:textSize="@dimen/text_size_18"/>
    </RelativeLayout>
</LinearLayout>